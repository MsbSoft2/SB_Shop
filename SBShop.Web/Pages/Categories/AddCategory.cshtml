@page
@model SBShop.Web.Pages.Categories.AddCategoryModel
@{
    ViewData["Title"] = "افزودن گروه جدید";
}

<h1>افزودن گروه جدید</h1>
<hr />
<form class="col-md-6" method="post">
    <div class="form-group">
        <label>نام گروه</label>
        <input asp-for="Category.Name" type="text" class="form-control" >
    </div>
    <div class="form-group">
        <label>توضیحات گروه</label>
        <input asp-for="Category.Description" type="text" class="form-control" >
    </div>
    <input class="btn rounded-pill btn-block btn-success" type="submit" value="افزودن گروه جدید" />
</form>