@model SBShop.Data.DTO.Product.AddEditProductViewModel

@{
    ViewData["Title"] = "افزودن محصول";
}

<h1>افزودن محصول</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="InsertProduct" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>&nbsp;<span>( تومان )</span>
                <input asp-for="Price" class="form-control" type="number" value="" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input name="Image" type="file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>

                @foreach (var category in Model.Categories)
                {
                    <div class="form-check">
                        <input asp-for="CategoryId" value="@category.CategoryId" class="form-check-input" type="radio">
                        <label class="form-check-label mr-4">
                            @category.Name
                        </label>
                    </div>
                }
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت محصول" class="btn rounded-pill btn-block btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/jquery-1.10.2.min.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/ckeditor/adapters/jquery.js"></script>
    <script>
        $(function () {
            $('#Description').ckeditor();
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
